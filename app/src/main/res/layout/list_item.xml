<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item_thumbnail"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        app:border_color="@color/white"
        app:border_width="3dp"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_thumbnail"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/list_item_author"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="AUTHOR"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="This is row number 15"
            android:id="@+id/list_item_text"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="0"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_marginTop="34dp"
        android:id="@+id/list_item_counter"
        android:layout_alignParentRight="true"
        />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-5dp"
        android:background="@drawable/swipe_up"
        android:backgroundTint="@color/dark_gray"
        android:id="@+id/list_item_btn_up"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:rotation="180"
        android:background="@drawable/swipe_up"
        android:backgroundTint="@color/dark_gray"
        android:id="@+id/list_item_btn_down"/>
</RelativeLayout>